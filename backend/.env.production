# Production Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (UPDATE THESE FOR PRODUCTION)
DB_HOST=your_production_db_host
DB_PORT=3306
DB_USER=your_production_db_user
DB_PASSWORD=your_production_db_password
DB_NAME=hospital_db_prod

# JWT Configuration (CHANGE THIS SECRET!)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRES_IN=24h

# CORS Configuration
FRONTEND_URL=https://your-production-domain.com

# ZenoPay Configuration
ZENOPAY_API_KEY=your_production_zenopay_api_key
ZENOPAY_MERCHANT_ID=your_production_merchant_id
ZENOPAY_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security
HELMET_ENABLED=true
TRUST_PROXY=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
