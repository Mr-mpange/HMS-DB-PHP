# Mobile Money Configuration
# Copy these to your .env file and fill in your API credentials

# M-Pesa Configuration
MPESA_ENABLED=false
MPESA_API_KEY=your_mpesa_api_key_here
MPESA_PUBLIC_KEY=your_mpesa_public_key_here
MPESA_SERVICE_PROVIDER_CODE=your_service_provider_code
MPESA_API_URL=https://openapi.m-pesa.com/sandbox

# Airtel Money Configuration
AIRTEL_ENABLED=false
AIRTEL_CLIENT_ID=your_airtel_client_id
AIRTEL_CLIENT_SECRET=your_airtel_client_secret
AIRTEL_API_URL=https://openapiuat.airtel.africa

# Tigo Pesa Configuration
TIGO_ENABLED=false
TIGO_USERNAME=your_tigo_username
TIGO_PASSWORD=your_tigo_password
TIGO_BILLER_CODE=your_biller_code
TIGO_API_URL=https://tigo-api-url

# Halopesa Configuration
HALOPESA_ENABLED=false
HALOPESA_API_KEY=your_halopesa_api_key
HALOPESA_MERCHANT_CODE=your_merchant_code
HALOPESA_API_URL=https://halopesa-api-url

# Callback URL (where providers will send payment notifications)
MOBILE_MONEY_CALLBACK_URL=https://yourdomain.com/api/mobile-money/callback
